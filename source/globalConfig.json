{
    "meta": {
        "name": "ip2locationpy",
        "displayName": "IP2Locationpy",
        "version": "1.0.0",
        "restRoot": "ip2locationpy",
        "schemaVersion": "1.0.0"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "account",
                    "title": "Account",
                    "table": {
                        "header": [
                            {
                                "field": "name",
                                "label": "Account name"
                            }
                        ],
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ]
                    },
                    "entity": [
                        {
                            "field": "name",
                            "label": "GlobalAccount name",
                            "type": "text",
                            "required": true,
                            "help": "Only one account is supported.  Must be main",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^main$",
                                    "errorMsg": "Only one account is supported. Must be main"
                                }
                            ],
                            "defaultValue": "main"
                        },
                        {
                            "field": "password",
                            "label": "Download Token",
                            "type": "text",
                            "encrypted": true,
                            "required": true,
                            "help": "IP2Location Download Token",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 8192,
                                    "errorMsg": "Length of password should be between 1 and 8192"
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "proxy",
                    "title": "Proxy",
                    "entity": [
                        {
                            "field": "proxy_enabled",
                            "label": "Enable",
                            "type": "checkbox"
                        },
                        {
                            "field": "proxy_type",
                            "label": "Proxy Type",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "http",
                                        "value": "http"
                                    },
                                    {
                                        "label": "socks4",
                                        "value": "socks4"
                                    },
                                    {
                                        "label": "socks5",
                                        "value": "socks5"
                                    }
                                ]
                            },
                            "defaultValue": "http"
                        },
                        {
                            "field": "proxy_url",
                            "label": "Host",
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 4096,
                                    "errorMsg": "Max host length is 4096"
                                }
                            ]
                        },
                        {
                            "field": "proxy_port",
                            "label": "Port",
                            "type": "text",
                            "validators": [
                                {
                                    "type": "number",
                                    "range": [
                                        1,
                                        65535
                                    ]
                                }
                            ]
                        },
                        {
                            "field": "proxy_username",
                            "label": "Username",
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 50,
                                    "errorMsg": "Max length of username is 50"
                                }
                            ]
                        },
                        {
                            "field": "proxy_password",
                            "label": "Password",
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ]
                        },
                        {
                            "field": "proxy_rdns",
                            "label": "Remote DNS resolution",
                            "type": "checkbox"
                        }
                    ],
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    }
                },
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "database_code",
                        "label": "Database Code"
                    },
                    {
                        "field": "global_account",
                        "label": "Global Account"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "ip2locationpyupdate",
                    "title": "ip2locationpyupdate",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Name must be either IP2LOCATION_GEO OR IP2LOCATION_PROXY.  Duplicates no allowed.",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^(IP2LOCATION_GEO|IP2LOCATION_PROXY)$",
                                    "errorMsg": "Input Name must either IP2LOCATION_GEO OR IP2LOCATION_PROXY respectivly."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "defaultValue": "86400",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "createSearchChoice": true,
                                "denyList": "^_.*$"
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "database_code",
                            "label": "Database Code",
                            "help": "1) DBCLEAN=Removes ip2locationgeodb.bin if exists. PXCLEAN=Removes ip2locationproxydb.bin if exists. Download of bin will not be performed. 2) Example DB Codes: PX11LITEBINIPV6 OR DB11LITEBINIPV6.",
                            "required": true,
                            "type": "text",
                            "defaultValue": "##IP2LOCATION Database Code.  Examples: PX11LITEBINIPV6 OR DB11LITEBINIPV6",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^((DB)((([1-9]|[12][0-5]))(LITE){0,1}BIN(IPV6){0,1})$)|^((PX)((([1-9]|[1][0-1]))(LITE){0,1}BIN(IPV6){0,1})$)|^(DB|PX)CLEAN$",
                                    "errorMsg": "Value must be (DB|PX)(1-25)[LITE]BIN[IPV6] OR special use case (DB|PX)CLEAN"
                                }
                            ]
                        },
                        {
                            "field": "global_account",
                            "label": "Global Account",
                            "help": "",
                            "required": true,
                            "type": "singleSelect",
                            "options": {
                                "referenceName": "account"
                            }
                        }
                    ]
                }
            ]
        }
    }
}